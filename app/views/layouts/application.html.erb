<!DOCTYPE html>
<html>
  <head>
    <title>OsiVCome</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="collapse navbar-collapse ml-auto">
          <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <li class="nav-item active">
                 <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %>
              </li>
              <li class="nav-item active">
                <%= link_to "ユーザー一覧", root_path, class: "nav-link" %>
              </li>
              <li class="nav-item active">
                <%= link_to"キャラクター一覧", root_path, class: "nav-link" %>
              </li>
              <li class="nav-item active">
                <%= link_to "問い合わせ", root_path, class: "nav-link" %>
              </li>
              <li class="nav-item active">
                <%= link_to "ユーザー編集",root_path, class: "nav-link" %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="nav-item active">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
              </li>
              <li class="nav-item active">
                <%= link_to "キャラクター一覧", root_path, class: "nav-link" %>
              </li>
              <li class="nav-item active">
                <%= link_to "ユーザー一覧", root_path, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item active">
                <%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item active">
                <%= link_to "ログイン", new_customer_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item active">
                <%= link_to "使用者ゲストログイン", guest_sign_in_path, method: :post, class: "nav-link" %>
              </li>
              <li class="nav-item active">
                <%= link_to "管理者ゲストログイン", admin_guest_sign_in_path, method: :post, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= flash[:notice] %>
    <%= yield %>
  </body>
</html>
