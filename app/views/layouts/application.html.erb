<!DOCTYPE html>
<html>
  <head>
    <title>OsiVCome</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if customer_signed_in? %>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
        <%= link_to "ユーザー一覧", customers_path %>
        <%= link_to"キャラクター一覧", characters_path %>
        <%= link_to "問い合わせ", root_path %>
        <%= link_to "ユーザー編集",edit_customer_path(current_customer) %>
      <% elsif admin_signed_in? %>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        <%= link_to "キャラクター一覧", admin_characters_path %>
        <%= link_to "ユーザー一覧", admin_customers_path %>
        <%= link_to "新規登録", new_admin_character_path %>
      <% else %>
        <%= link_to "新規登録", new_customer_registration_path %>
        <%= link_to "ログイン", new_customer_session_path %>
        <%= link_to "使用者ゲストログイン", guest_sign_in_path, method: :post %>
        <%= link_to "管理者ゲストログイン", admin_guest_sign_in_path, method: :post %>
      <% end %>
    </header>
    <%= flash[:notice] %>
    <%= yield %>
  </body>
</html>
