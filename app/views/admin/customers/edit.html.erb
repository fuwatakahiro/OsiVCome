<div class="container">
  <h3 class="mt-3"><%= @customer.name %>の編集</h3>
  <div class="row d-flex justify-content-center">
    <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
    <%= render 'layouts/errors', obj: @customer %>
      <div class="form-group row">
        <%= f.label :画像, class: "col-lg-4 col-form-label" %>
        <%= f.file_field :profile_image, class: "col-lg-8" %>
      </div>
      <div class="form-group row">
        <%= f.label :名前, class: "col-lg-5 col-form-label" %>
        <%= f.text_field :name, class: "col-lg-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :メールアドレス, class: "col-lg-5 col-form-label" %>
        <%= f.text_field :email, class: "col-lg-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :会員ステータス, class: "col-lg-5 col-form-label" %>
        <div class="col-lg-7">
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "無効" %>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit "更新", class: "btn btn-success col-lg-5" %>
      </div>
    <% end %>
  </div>
</div>
