<%= render 'layouts/errors', obj: @customer %>
<div class="container">
  <div class="row">
    
  </div>
</div>
<%= image_tag @customer.get_profile_image(100,100) %><br>
   <span>名前</span>
  <%= @customer.name %><br>
  <span>メールアドレス</span>
  <%= @customer.email %>
  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <%= f.label "会員ステータス" %>
  <%= f.radio_button :is_deleted, :false %>
  <%= f.label :is_deleted, "有効" %>
  <%= f.radio_button :is_deleted, :true %>
  <%= f.label :is_deleted, "無効" %>
  <%= f.submit "更新" %>
<% end %>