<div>
  <div class="row d-lg-flex justify-content-lg-center"><%= image_tag  customer.get_profile_image(120,120), class: "rounded" %></div>
  <div class="row border-top">
    <div class="col-5 p py-2">名前</div>
    <div class="col-7 p py-2"><%= customer.name %></div>
  </div>
  <div class="row border-top">
    <div class="col-5 p py-2">自己紹介</div>
    <div class="col-7 p py-2"><%= customer.introduction %></div>
  </div>
  <div class="row border-top">
    <div class="col-6 p pt-2">コメント数</div>
    <div class="col-6 p py-2"><%= customer.comments.count %>件</div>
  </div>
  <div class="row border-top">
    <div class="col-6 p mx-0 p py-2">フォロー数</div>
    <div class="col-6 followes-count p py-2"><%= render "public/customers/following", customer: customer %></div>
  </div>
  <div class="row border-top">
    <div class="col-6 p py-2">フォロワー数</div>
    <div class="col-6 followed-count p py-2"><%= render "public/customers/follower", customer: customer %></div>
  </div>
  <div class="row border-top">
    <div class="col-6 mx-0 p py-2">状態</div>
     <% if customer.is_deleted == false %>
      <div class="col-6 followed-count p py-2 text-success">有効</div>
    <% else %>
      <div class="col-6 followed-count p py-2 text-secondary">無効</div>
    <% end %>
  </div>
</div>