<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 mt-3'>
      <h3><%=@customer.name %>詳細</h3>
      <table class='table'>
        <tr><%= image_tag  @customer.get_profile_image(120,120) %></tr>
        <tr>
          <th>名前</th>
          <th><%= @customer.name %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= @customer.introduction %></th>
        </tr>
        <tr>
          <th>コメント数</th>
          <th><%= @customer.comments.count %>件</th>
        </tr>
        <tr>
          <th>フォロー数</th>
          <th><%= @customer.followers.count %>人</th>
        </tr>
        <tr>
          <th>フォロワー数</th>
          <th><%= @customer.followings.count %>人</th>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to "編集",  edit_admin_customer_path(@customer),class: "btn-primary btn " %>
      </div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h3 class="mt-3">コメント一覧</h3>
      <table class="table">
        <thead>
          <tr>
            <th>キャラクター名</th>
            <th>コメント内容</th>
            <th>いいね数</th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
          <tr>
            <th><%= link_to comment.character.name, admin_character_path(comment.character.id) %></th>
            <th><%= comment.content %></th>
            <th class="text-danger"> ♥<%= comment.favorites.count %>いいね</th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>