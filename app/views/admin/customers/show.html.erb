<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 mt-3'>
      <h3><%=@customer.name %>詳細</h3>
      <%= render "admin/customers/info", customer: @customer %>
      <div class="text-center">
        <%= link_to "編集",  edit_admin_customer_path(@customer),class: "btn-primary btn " %>
      </div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h3 class="mt-3">コメント一覧</h3>
      <table class="table">
        <thead>
          <tr>
            <th>キャラクター名</th>
            <th>コメント内容</th>
            <th>いいね数</th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
          <tr>
            <th><%= link_to comment.character.name, admin_character_path(comment.character.id), class: "text-info" %></th>
            <th><%= comment.content %></th>
            <th class="text-dark"> <%= comment.favorites.count %>いいね</th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>