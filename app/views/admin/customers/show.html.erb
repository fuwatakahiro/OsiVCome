<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 mt-3'>
      <h3><%=@customer.name %>詳細</h3>
      <%= render "admin/customers/info", customer: @customer %>
      <div class="text-center">
        <%= link_to "編集",  edit_admin_customer_path(@customer),class: "btn-primary btn " %>
      </div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h3 class="mt-3">コメント一覧</h3>
      <div>
        <div class="row mt-5">
          <div class="col-3 py-2">キャラ名</div>
          <div class="col-4 py-2">推し活動</div>
          <div class="col-3 py-2">いいね数</div>
          <div class="col-2 py-2"></div>
        </div>
        <div class="comment_lists">
           <%= render "admin/comments/index", comments: @comments %>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <%= paginate @comments %>
      </div>
    </div>
  </div>
</div>