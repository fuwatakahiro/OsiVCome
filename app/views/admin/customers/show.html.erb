<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 mt-3'>
      <h3><%=@customer.name %>詳細</h3>
      <%= render "admin/customers/info", customer: @customer %>
      <div class="text-center">
        <%= link_to "編集",  edit_admin_customer_path(@customer),class: "btn-primary btn " %>
      </div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h3 class="mt-3">コメント一覧</h3>
      <div>
        <div class="row">
          <div class="col-4">キャラ名</div>
          <div class="col-5">推し活動</div>
          <div class="col-3">いいね数</div>
        </div>
        <% @comments.each do |comment| %>
          <div class="row border-top">
            <div class="col-4 py-2"><%= link_to comment.character.name, admin_character_path(comment.character.id), class: "text-info" %></div>
            <div class="col-5 py-2"><%= comment.content %></div>
            <div class="col-3 py-2 text-dark"><%= comment.favorites.count %>いいね</div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>