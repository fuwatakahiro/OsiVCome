<div class="container">
  <div class="row">
    <h3>ユーザー一覧</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>コメント数</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.name, admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td><%= customer.comments.count %>件</td>
            <% if customer.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-secondary font-weight-bold">退会</td>
            <% end %>
            <!--<td><%#= customer.is_deleted %></td>-->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row justify-content-center">
    <%= paginate @customers %>
  </div>
</div>