<div class="container">
  <div class="row">
    <h3>ユーザー一覧</h3>
  </div>
  <div class="my-4">
    <div class="row">
      <div class="col-2">id</div>
      <div class="col-2">名前</div>
      <div class="col-3">メール</div>
      <div class="col-3">コメ数</div>
      <div class="col-2">状態</div>
    </div>
    <% @customers.each do |customer| %>
      <div class="row border-top">
        <div class="col-2 py-2"><%= customer.id %></div>
        <div class="col-2 py-2"><%= link_to customer.name.truncate(7), admin_customer_path(customer), class: "text-info" %></div>
        <div class="col-3 py-2"><%= customer.email.truncate(13) %></div>
        <div class="col-3 py-2"><%= customer.comments.count %>件</div>
        <% if customer.is_deleted == false %>
          <div class="col-2 text-success font-weight-bold py-2">有効</div>
        <% else %>
          <div class="col-2 text-secondary font-weight-bold py-2">退会</div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <%= paginate @customers %>
  </div>
</div>