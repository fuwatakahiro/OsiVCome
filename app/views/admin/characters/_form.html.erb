<%= form_with model: character,url: admin_characters_path, local: false, method: :post do |f| %>
  <div class="error_message">
    <%= render 'layouts/errors', obj: character %>
  </div>
  <div class="form-group row mx-0">
    <%= f.label :画像,class: "col-lg-3 col-form-label mx-0" %>
    <%= f.file_field :character_image, accept: "image/*", class: "col-lg-9 prev-content-file" %>
  </div>
  <div class="prev-contents col-4 ml-5 mb-3">
    <% if character.character_image.attached? %>
      <div class="prev-content ">
        <%= image_tag character.get_character_image(100,100), class: "prev-image" %>
      </div>
    <% end %>
  </div>
  <div class="row form-group mx-0">
    <%= f.label :名前,class: "col-lg-3 col-form-label" %>
    <%= f.text_field :name, placeholder: "キャラクター名", class: "col-lg-9 form-control mx-auto col-11" %>
  </div>
  <div class="row form-group mx-0">
    <%= f.label :誕生日, class: "col-3 col-form-label" %>
    <%= f.text_field :birth_month, placeholder: "1月", class: "col-2 mr-2" %>
    <%= f.text_field :birth_day, placeholder: "1日", class: "col-2" %>
  </div>
  <div class="row form-group mx-0">
    <%= f.label :挨拶, class: "col-lg-3 col-form-label" %>
    <%= f.text_field :greeting, placeholder: "挨拶", class: "col-lg-9 form-control mx-auto col-11" %>
  </div>
  <div class="row form-group mx-0">
    <%= f.label :グループ, class: "col-3 col-form-label" %>
    <%= f.select :genre_id,  options_from_collection_for_select(Genre.all, :id, :name), include_blank: '選択してください', class: "col-9 form-control" %>
  </div>
  <div class="row form-group mx-0">
    <%= f.label :引用先, class: "col-lg-3 col-form-labe" %>
    <%= f.text_area :reference_destination, placeholder: "画像の引用先のサービス名またはURLを記述して下さい", class: "col-lg-9 form-control mx-auto col-11" %>
  </div>
  <div class="text-center actions mx-0">
    <%= f.submit "新規登録", class: "col-lg-5 col-11 mx-auto btn btn-success mb-3" %>
  </div>
<% end %>