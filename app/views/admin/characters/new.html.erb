<%= render 'layouts/errors', obj: @character %>
<%= form_with model: @character, url: admin_characters_path, method: :post do |f| %>
  <%= f.label :画像 %>
  <%= f.file_field :character_image, accept: "image/*" %><br>
  <%= f.label :名前 %>
  <%= f.text_field :name %><br>
  <%= f.label :挨拶 %>
  <%= f.text_field :greeting %><br>
  <%= f.label :ジャンル %>
  <%= f.text_field :genre %><br>
  <%= f.label :引用先 %>
  <%= f.text_area :reference_destination %><br>
  <%= f.submit "新規登録" %>
<% end %>

