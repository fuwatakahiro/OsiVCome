<div class="container px-0">
  <div class="row pt-3">
    <h3 class="mx-4">キャラクター新規登録</h3>
  </div>
  <%= render 'layouts/errors', obj: @character %>
  <div class="row d-flex justify-content-center">
    <%= form_with model: @character, url: admin_characters_path, method: :post do |f| %>
      <div class="form-group row">
        <%= f.label :画像,class: "col-lg-3 col-form-label" %>
        <%= f.file_field :character_image, accept: "image/*", class: "col-lg-9" %>
      </div>
      <div class="row form-group">
        <%= f.label :名前,class: "col-lg-3 col-form-label" %>
        <%= f.text_field :name, placeholder: "キャラクター名", class: "col-lg-9 form-control" %>
      </div>
      <div class="row form-group">
        <%= f.label :挨拶, class: "col-lg-3 col-form-label" %>
        <%= f.text_field :greeting, placeholder: "挨拶", class: "col-lg-9 form-control" %>
      </div>
      <div class="row form-group">
        <%= f.label :グループ, class: "col-lg-3 col-form-label" %>
        <%= f.select :genre_id,  options_from_collection_for_select(Genre.all, :id, :name), include_blank: '選択してください', class: "col-lg-9 form-control" %>
      </div>
      <div class="row form-group">
        <%= f.label :引用先, class: "col-lg-3 col-form-labe" %>
        <%= f.text_area :reference_destination, placeholder: "画像の引用先のサービス名またはURLを記述して下さい", class: "col-lg-9 form-control" %>
      </div>
      <div class="text-center actions">
        <%= f.submit "新規登録", class: "col-lg-5 btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
