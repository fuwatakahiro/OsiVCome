<% comments.each do |comment| %>
  <div class="row border-top">
    <div class="col-3 py-2"><%= link_to comment.character.name, admin_character_path(comment.character.id), class: "text-info" %></div>
    <div class="col-4 py-2"><%= comment.content %></div>
    <div class="col-3 py-2 text-dark"><%= comment.favorites.count %>いいね</div>
    <div class="col-2 py-2"><%= link_to "削除", admin_customer_comment_path(comment.customer.id, comment.id),remote: true, data: { confirm: 'コメントを消しますか？' }, method: :delete %></div>
  </div>
<% end %>
