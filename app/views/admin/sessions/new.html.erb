<div class="container">
  <div class="row pt-3">
    <h3>ログイン</h3>
  </div>
  <div class="row d-flex justify-content-center">
    <%= form_with model: resource, url: session_path(resource_name) do |f| %>
      <div class="form-group row mt-5">
        <%= f.label :メールアドレス, class: "col-lg-5 col-form-label" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-lg-7" %>
      </div>

      <div class="form-group row mt-5">
        <%= f.label :パスワード, class: "col-lg-5 col-form-label" %><br/>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-lg-7" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Log in", class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
