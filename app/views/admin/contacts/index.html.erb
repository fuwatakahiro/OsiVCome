<div class="container">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>名前</th>
          <th>内容</th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.message %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row justify-content-center">
    <%= paginate @contacts %>
  </div>
</div>