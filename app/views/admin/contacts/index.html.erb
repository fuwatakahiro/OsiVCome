<div class="container">
    <div class="py-5">
      <div class="row">
        <div class="col-3">名前</div>
        <div class="col-5">内容</div>
        <div class="col-4">問い合わせ時間</div>
      </div>
      <% @contacts.each do |contact| %>
        <div class="row border-top">
          <% if contact.notifications.where(checked: false).count > 0 %>
          　<div class="w-100">
          　  <%= link_to admin_contact_path(contact.id), method: :patch, class: "d-flex inline-block" do %>
              <div class="col-3 d-flex inline-block"><%= contact.name %></div>
              <div class="col-5 d-flex inline-block"><%= contact.message %></div>
              <div class="col-4 d-flex inline-block"><%= l contact.created_at, format: :short %></div>
            <% end %>
          　</div>
          <% else %>
            <div class="col-3 py-2"><%= contact.name %></div>
            <div class="col-5 py-2"><%= contact.message %></div>
            <div class="col-4 py-2"><%= l contact.created_at, format: :short %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  <div class="row justify-content-center">
    <%= paginate @contacts %>
  </div>
</div>