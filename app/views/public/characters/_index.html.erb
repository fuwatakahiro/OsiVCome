 <div class="row d-flex flex-wrap my-3">
        <% @characters.each do |character| %>
        <div class=" col-3 flex-wrap">
          <%= link_to character_path(character),class: "top-link" do %>
          <%= image_tag character.get_character_image(150, 150) %>
          <p class="text-left"><span><%= character.name %></span></p>
          <p class="text-left"><%= character.greeting %></p>
        <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>