<%= form_with model: comment, url: character_comments_path(character.id), local: false, method: :post do |f| %>
  <% if character.name == "その他" %>
    <%= f.text_field :character_name %>
  <% else %>
    <%= f.hidden_field :character_name, :value => character.name %>
  <% end %>
  <%= f.text_area :content, class: "form-control" %>
  <p class="row mt-3"><%= f.submit "コメント作成", class: "col-4 mx-auto btn btn-success" %></p>
<% end %>