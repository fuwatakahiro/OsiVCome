<div class="container py-3">
  <h2 class="mb-5 pt-5">お問い合せ確認</h2>
  <div class="row  text-center my-4">
    <div class="col-5"><p class="h2">お名前</p></div>
    <div class="col-7"><p class="h4"><%= @contact.name %></p></div>
  </div>
  <div class="row text-center">
    <div class="col-5"><p class="h2">メッセージ</p></div>
    <div class="col-7"><p class="h4"><%= @contact.message %></p></div>
  </div>
  <div class="row mt-5">
    <div class="col-12 d-flex justify-content-center">
      <%= form_with model: @contact, url: contacts_path, method: :post, class: "d-inline-block mr-3" do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :message %>
        <div class="text-center"><%= f.submit '送信', class: "btn btn-success" %></div>
      <% end %>
      <%= form_with model: @contact, url: back_path, class: "d-inline-block" do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :message %>
        <div class="text-center"><%= f.submit '入力画面に戻る',class: "btn btn-secondary" %></div>
      <% end %>
    </div>
  </div>
</div>
