<div class="container">
  <div class="row pt-3">
    <h3>新規登録</h3>
  </div>
    <div class="row d-flex justify-content-center">
    <%= form_with model: resource, url: registration_path(resource_name) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group row mt-5">
        <%= f.label :名前, class: "col-lg-5 col-form-label" %><br/>
        <%= f.text_field :name, class: "form-control col-lg-7" %>
      </div>

      <div class="form-group row">
        <%= f.label :メールアドレス, class: "col-form-label col-lg-5" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-7 form-control" %>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード, class: "col-form-label col-lg-5" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-lg-7 form-control" %>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード確認, class: "col-form-label col-lg-5" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-lg-7 form-control" %>
      </div>

      <div class="text-center actions">
        <%= f.submit "新規登録", class: "col-lg-5 btn btn-secondary" %>
        <%= render "public/shared/links" %>
      </div>
    <% end %>
  </div>
</div>


