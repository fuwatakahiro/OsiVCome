<% if params[:follow] %>
  $('.followes-count').html("<%= j(render "public/customers/following", customer: @customer) %>");
  $('.followed-count').html("<%= j(render "public/customers/follower", customer: @customer) %>");
  $('#relationship_buttons_<%= @customer.id %>').html("<%= j(render "public/relationships/btn", customer: @customer) %>");
<% else %>
  $('.followes-count').html("<%= j(render "public/customers/following", customer: current_customer) %>");
  $('.followed-count').html("<%= j(render "public/customers/follower", customer: current_customer) %>");
  $('#relationship_buttons_<%= @customer.id %>').html("<%= j(render "public/relationships/btn", customer: @customer) %>");
<% end %>