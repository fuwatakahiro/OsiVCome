<% if current_customer != customer %>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォローを外す", customer_relationships_path(customer.id), remote: true,  method: :delete %>
  <% else %>
    <%= link_to "フォローする", customer_relationships_path(customer.id), remote: true,method: :post %>
  <% end %>
<% end %>