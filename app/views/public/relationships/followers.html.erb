<div class="container">
  <div class="row d-flex flex-wrap">
    <% @customers.each do |customer| %>
      <div class=" col-4 flex-wrap">
        <%= image_tag customer.get_profile_image(200, 200) %>
        <p class="text-left text-dark"><span><%= customer.name %></span></p>
        <p class="text-left text-dark"><%= customer.comments.count %>件</p>
        <%= link_to "詳細", customer_path(customer.id) %> |
        <%= render "public/relationships/btn", customer: customer %>
      </div>
    <% end %>
  </div>
</div>
