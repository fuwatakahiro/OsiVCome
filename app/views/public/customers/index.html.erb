<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4 mt-3'>
      <h3>自分</h3>
      <table class='table'>
        <tr><%= image_tag  current_customer.get_profile_image(120,120) %></tr>
        <tr>
          <th>名前</th>
          <th><%= link_to current_customer.name, customer_path(current_customer.id) %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= current_customer.introduction %></th>
        </tr>
        <tr>
          <th>コメント数</th>
          <th><%= current_customer.comments.count %>件</th>
        </tr>
        <tr>
          <th>フォロー数</th>
          <th class="followes-count"><%= link_to current_customer.followings.count, customer_followings_path(current_customer.id) %>人</th>
        </tr>
        <tr>
          <th>フォロワー数</th>
          <th class="followed-count"><%= link_to current_customer.followers.count, customer_followers_path(current_customer.id) %>人</th>
        </tr>
      </table>
    </div>
    <div class='col-md-7 offset-md-1'>
      <h3 class="mt-3">ユーザー一覧</h3>
      <%= link_to "コメントランキング", rank_path %>
      <%= render "index", customers: @customers %>
    </div>
  </div>
</div>