<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4 mt-3'>
      <h3><%=@customer.name %>の詳細</h3>
      <%= render "public/customers/info", customer: @customer %>
      <% if customer_signed_in? && @customer.is_deleted == false %>
      <div id="relationship_buttons_<%= @customer.id %>">
        <%= render "public/relationships/btn", customer: @customer %>
      </div>
      <% end %>
    </div>
    <div class='col-md-7 offset-md-1'>
      <h3 class="mt-3">コメント一覧</h3>
      <div class="commnets_index">
        <%= render "public/comments/index", comments: @comments %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @comments %>
      </div>
    </div>
  </div>
</div>