<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4 mt-3'>
      <h3><%=@customer.name %>の詳細</h3>
      <table class='table'>
        <tr><%= image_tag  @customer.get_profile_image(120,120) %></tr>
        <tr>
          <th>名前</th>
          <th><%= @customer.name %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= @customer.introduction %></th>
        </tr>
        <tr>
          <th>コメント数</th>
          <th><%= @customer.comments.count %>件</th>
        </tr>
        <tr>
          <th>フォロー数</th>
          <th><%= @customer.followers.count %></th>
        </tr>
        <tr>
          <th>フォロワー数</th>
          <th><%= @customer.followings.count %></th>
        </tr>
      </table>
      <%= render "public/relationships/btn", customer: @customer %>
    </div>
    <div class='col-md-7 offset-md-1'>
      <h3 class="mt-3">コメント一覧</h3>
      <table class="table">
        <thead>
          <tr>
            <th>キャラクター名</th>
            <th>コメント内容</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
          <tr>
            <th><%= comment.character.name %></th>
            <th><%= comment.content %></th>
            <% if comment.customer.id == current_customer.id %>
              <th><%= link_to "削除", character_comment_path(comment.character.id, comment.id), method: :delete %></th>
            <% end %>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>