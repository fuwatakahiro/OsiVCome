<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4 mt-3'>
      <h3><%=@customer.name %>の詳細</h3>
      <%= render "info", customer: @customer %>
      <% if customer_signed_in? %>
      <div id="relationship_buttons_<%= @customer.id %>">
        <%= render "public/relationships/btn", customer: @customer %>
      </div>
      <% end %>
    </div>
    <div class='col-md-7 offset-md-1'>
      <h3 class="mt-3">コメント一覧</h3>
      <table class="table">
        <thead>
          <tr>
            <th>キャラクター名</th>
            <th>コメント内容</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
          <tr>
            <th><%= link_to comment.character.name, character_path(comment.character.id) %></th>
            <th><%= comment.content %></th>
            <% if comment.customer.id == current_customer.id %>
              <th><%= link_to "削除", character_comment_path(comment.character.id, comment.id), method: :delete %></th>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>