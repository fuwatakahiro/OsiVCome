<h3>ユーザー編集ページ</h3>
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
      <%= render 'layouts/errors', obj: @customer %>
      <div class="form-group">
        <%= f.label :画像, class:"col-form-label" %>
        <%= f.file_field :profile_image, accept: "image/*",class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.label :名前,class: "col-form-label" %>
        <%= f.text_field :name, placeholder: "ユーザー名", class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :自己紹介, class: "col-form-label" %>
        <%= f.text_area :introduction, placeholder: "外部からの画像はサービス名またはURLを記述して下さい(50文字以内)", class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.hidden_field :email %>
      </div>
      <div class="text-center">
        <%= f.submit "更新", class: "col-lg-5 btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>




