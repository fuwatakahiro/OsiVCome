<div class="row border-top">
  <div class="col-5 p py-2">
    <% if group.customers.include?(current_customer) %>
      <%= link_to "最推し数", character_group_path(character.id, group.id),method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "最推し数", character_group_join_path(character.id, group.id), class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="col-5 p py-2"><%= link_to group.customers.count, character_group_path(character.id, group.id) %>人</div>
</div>